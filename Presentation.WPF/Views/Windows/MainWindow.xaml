<Window x:Class="Presentation.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Presentation.WPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Title="EasyInventory ERP" Width="1200" Height="720">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" CornerRadius="0" GlassFrameThickness="1" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <materialDesign:DialogHost Identifier="RootDialog" DialogTheme="Inherit">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Background="{StaticResource SidebarBackgroundBrush}" 
                    BorderThickness="0 0 1 0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Width" Value="260"/>
                        <Style.Triggers>
                            <!-- Collapsed State -->
                            <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                <Setter Property="Width" Value="70"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Menu -->
                        <RowDefinition Height="Auto"/> <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="0,32,0,24" Height="40" WindowChrome.IsHitTestVisibleInChrome="True">
                        <!-- Expanded Header -->
                        <StackPanel Orientation="Horizontal" Margin="24,0" VerticalAlignment="Center" 
                                    Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 12 0" Foreground="{StaticResource SidebarForegroundBrush}"/>
                            <TextBlock Text="EasyInventory" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" FontFamily="{DynamicResource MaterialDesignFont}" Foreground="{StaticResource SidebarForegroundBrush}"/>
                        </StackPanel>

                        <!-- Collapsed Header -->
                        <materialDesign:PackIcon Kind="ViewDashboard" Width="32" Height="32" 
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 Foreground="{StaticResource SidebarForegroundBrush}"
                                                 Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>

                    <!-- Menu -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Padding="0"
                                  materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                        </ScrollViewer.Resources>
                        <ItemsControl ItemsSource="{Binding Menus}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Style.Triggers>
                                                    <!-- Group Item (Expander) when Expanded -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding HasChildren}" Value="True"/>
                                                            <Condition Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Expander Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" Margin="0 1">
                                                                        <Expander.Header>
                                                                            <StackPanel Orientation="Horizontal" Margin="8 6">
                                                                                <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24" Margin="0 0 16 0" VerticalAlignment="Center" Foreground="{StaticResource SidebarForegroundBrush}"/>
                                                                                <TextBlock Text="{Binding Title}" FontSize="15" VerticalAlignment="Center" FontWeight="Medium" Foreground="{StaticResource SidebarForegroundBrush}"/>
                                                                            </StackPanel>
                                                                        </Expander.Header>
                                                                        <ItemsControl ItemsSource="{Binding Children}" Margin="20 0 0 0">
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Button Command="{Binding Command}" Style="{StaticResource MaterialDesignFlatButton}" 
                                                                                            HorizontalContentAlignment="Left" Padding="16 10" Margin="0 2" Height="Auto" 
                                                                                            Foreground="{StaticResource SidebarForegroundBrush}">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <materialDesign:PackIcon Kind="{Binding Icon}" Width="18" Height="18" Margin="0 0 12 0" Opacity="0.7"/>
                                                                                            <TextBlock Text="{Binding Title}" FontSize="14"/>
                                                                                        </StackPanel>
                                                                                    </Button>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </Expander>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>

                                                    <!-- Group Item (Tooltip) when Collapsed -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding HasChildren}" Value="True"/>
                                                            <Condition Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                                            Height="50" Padding="0" Margin="0,4"
                                                                            ToolTip="{Binding Title}"
                                                                            Foreground="{StaticResource SidebarForegroundBrush}">
                                                                        <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24"/>
                                                                    </Button>
                                                                    <!-- Note: Menu logic for collapsed groups is complex; simplifying to just show icon/tooltip for now -->
                                                                    <!-- Ideally, this would open a popup menu -->
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- Leaf Item (Button) when Expanded -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding HasChildren}" Value="False"/>
                                                            <Condition Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Button Command="{Binding Command}" Style="{StaticResource MaterialDesignFlatButton}" 
                                                                            HorizontalContentAlignment="Left" Padding="24,12" Margin="0 1" Height="Auto" 
                                                                            Foreground="{StaticResource SidebarForegroundBrush}">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24" Margin="0 0 16 0" VerticalAlignment="Center" Foreground="{StaticResource SidebarForegroundBrush}"/>
                                                                            <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="Medium"/>
                                                                        </StackPanel>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>

                                                    <!-- Leaf Item (Icon Only) when Collapsed -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding HasChildren}" Value="False"/>
                                                            <Condition Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Button Command="{Binding Command}" Style="{StaticResource MaterialDesignFlatButton}" 
                                                                            Height="50" Padding="0" Margin="0,4"
                                                                            ToolTip="{Binding Title}"
                                                                            Foreground="{StaticResource SidebarForegroundBrush}">
                                                                        <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24"/>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>

                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer -->
                    <StackPanel Grid.Row="2" Margin="12,24">
                        <Separator Background="{StaticResource SidebarForegroundBrush}" Opacity="0.1" Margin="0 0 0 16"/>
                        
                        <!-- Dark Mode Toggle -->
                        <Grid Margin="0,0,0,16">
                             <!-- Expanded -->
                            <DockPanel LastChildFill="False" Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ThemeLightDark" Width="20" Height="20" Margin="0 0 10 0" Foreground="{StaticResource SidebarForegroundBrush}" Opacity="0.6"/>
                                    <TextBlock Text="Dark Mode" VerticalAlignment="Center" FontWeight="Medium" Foreground="{StaticResource SidebarForegroundBrush}" />
                                </StackPanel>
                                <ToggleButton IsChecked="{Binding IsDarkMode}" Style="{StaticResource MaterialDesignSwitchToggleButton}" DockPanel.Dock="Right" Foreground="{StaticResource SidebarForegroundBrush}"/>
                            </DockPanel>

                            <!-- Collapsed -->
                            <ToggleButton IsChecked="{Binding IsDarkMode}" 
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}" 
                                          HorizontalAlignment="Center"
                                          ToolTip="Toggle Dark Mode"
                                          Foreground="{StaticResource SidebarForegroundBrush}"
                                          Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>

                        <!-- Collapse Button -->
                        <Button Command="{Binding ToggleSidebarCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                HorizontalAlignment="Right"
                                Width="30" Height="30" Padding="0"
                                Foreground="{StaticResource SidebarForegroundBrush}"
                                ToolTip="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse, StringFormat='{}Collapse Sidebar'}">
                            <Button.Content>
                                 <Grid>
                                    <materialDesign:PackIcon Kind="ChevronLeft" Width="24" Height="24" Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}"/>
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="24" Height="24" Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                            </Button.Content>
                        </Button>
     
                        <TextBlock Text="v1.0.0" Opacity="0.4" FontSize="10" Margin="0 10 0 0" HorizontalAlignment="Center" Foreground="{StaticResource SidebarForegroundBrush}"
                                   Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="{DynamicResource MaterialDesignPaper}" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="0">
                <Grid x:Name="MainGrid" HorizontalAlignment="Stretch">
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto"/> <!-- Title Bar -->
                         <RowDefinition Height="*"/>    <!-- Content -->
                     </Grid.RowDefinitions>

                     <!-- Custom Window Controls -->
                     <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 4 4 0" WindowChrome.IsHitTestVisibleInChrome="True">
                         <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Minimize" x:Name="BtnMinimize" Click="BtnMinimize_Click" Height="34" Width="40" Padding="0">
                             <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                         </Button>
                         <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Maximize" x:Name="BtnMaximize" Click="BtnMaximize_Click" Height="34" Width="40" Padding="0">
                             <materialDesign:PackIcon Kind="WindowMaximize" Width="18" Height="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                         </Button>
                         <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Close" x:Name="BtnClose" Click="BtnClose_Click" Height="34" Width="40" Padding="0">
                             <materialDesign:PackIcon Kind="WindowClose" Width="18" Height="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                         </Button>
                     </StackPanel>
                     
                     <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="24"/>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
