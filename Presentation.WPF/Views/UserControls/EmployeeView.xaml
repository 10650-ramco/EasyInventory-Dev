<UserControl x:Class="Presentation.WPF.Views.EmployeeView"
				 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
				 Height="450"
				 Width="700">

    <!-- Load data when window opens -->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========================= -->
        <!-- Employee Form -->
        <!-- ========================= -->
        <GroupBox Header="Employee Details"
				  Padding="12"
				  Margin="0,0,0,10" 
                  Background="#FF78BDBD"
                  Foreground="#FFBF0808" BorderBrush="#FF13A6FF">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Name -->
                <TextBlock Text="Name"
						   Grid.Row="0"
						   Grid.Column="0"
						   VerticalAlignment="Center"
						   Margin="0,0,6,6"/>

                <TextBox Grid.Row="0"
						 Grid.Column="1"
						 Margin="0,0,0,6"
						 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Department -->
                <TextBlock Text="Department"
						   Grid.Row="1"
						   Grid.Column="0"
						   VerticalAlignment="Center"
						   Margin="0,0,6,6"/>

                <TextBox Grid.Row="1"
						 Grid.Column="1"
						 Margin="0,0,0,6"
						 Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
							Grid.Column="1"
							Orientation="Horizontal"
							HorizontalAlignment="Left"
							Margin="0,8,0,0">

                    <Button Content="Save"
							Width="90"
							Margin="0,0,8,0"
							Command="{Binding SaveCommand}" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ========================= -->
        <!-- Employee List -->
        <!-- ========================= -->
        <DataGrid Grid.Row="1"
				  ItemsSource="{Binding Employees}"
				  SelectedItem="{Binding SelectedEmployee}"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  CanUserAddRows="False"
				  SelectionMode="Single">

            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID"
							Binding="{Binding Id}"
							Width="60"/>

                <!-- Name -->
                <DataGridTextColumn Header="Name"
							Binding="{Binding Name}"
							Width="*"/>

                <!-- Department -->
                <DataGridTextColumn Header="Department"
							Binding="{Binding Department}"
							Width="*"/>

                <!-- ACTIONS -->
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                <!-- EDIT ICON -->
                                <Button ToolTip="Edit"
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,8,0"
                                        Command="{Binding DataContext.SelectEmployeeCommand,
                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                </Button>

                                <!-- DELETE ICON -->
                                <Button ToolTip="Delete"
                                        Width="36"
                                        Height="36"
                                        Command="{Binding DataContext.DeleteCommand,
                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>