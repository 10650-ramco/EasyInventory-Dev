<UserControl x:Class="Presentation.WPF.Views.ItemGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>
        <!-- Main Content Area -->
        <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="16" 
                materialDesign:ElevationAssist.Elevation="Dp1" BorderThickness="0">
            <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Stats -->
                    <RowDefinition Height="*"/>    <!-- Data -->
                </Grid.RowDefinitions>

                <!-- 1. Header Section -->
                <Grid Grid.Row="0" Margin="12,12,12,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Product Categories" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                               FontWeight="Light"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="Organize your products into logical groups for better tracking." 
                               Style="{StaticResource MaterialDesignBody2TextBlock}" 
                               Opacity="0.6"
                               Margin="0,4,0,0"/>

                        <Grid Width="450" HorizontalAlignment="Left" Margin="0,24,0,0">
                            <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search categories..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.PrefixText="ðŸ”  "
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Height="52"
                                 Padding="12,0"
                                 FontSize="15"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                    <Button Grid.Column="1" 
                        VerticalAlignment="Bottom"
                        Height="52"
                        Padding="32,0"
                        Command="{Binding OpenAddDrawerCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="26"
                        materialDesign:ElevationAssist.Elevation="Dp3">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="22" Height="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Add New Category" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 2. Statistics Overview -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="4,0,4,32">
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Categories" FontSize="12" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding TotalGroups}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="FolderMultiple" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.15"/>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>

                <!-- 3. Items DataGrid Area -->
                <materialDesign:Card Grid.Row="2" Margin="12,0,12,12" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="24,16">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.7"/>
                                    <TextBlock Text="Category List" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Manage your item hierarchies" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.5"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Categories}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              BorderThickness="0"
                              MinRowHeight="49"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource MaterialDesignDataGrid}"
                              materialDesign:DataGridAssist.CellPadding="24 4"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="24 16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="100"/>
                                <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}" FontWeight="SemiBold" Width="250"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>

                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Edit Category"
                                                    Command="{Binding DataContext.OpenEditDrawerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Delete Category"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36" Margin="4,0,0,0">
                                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="#C62828" Opacity="0.8"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignCardBackground}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0" Padding="24,12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Page size: 10" VerticalAlignment="Center" Margin="0,0,24,0" Opacity="0.6"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Padding="4" Height="32" Width="32" Command="{Binding PrevPageCommand}">
                                        <materialDesign:PackIcon Kind="ChevronLeft" Width="24" Height="24"/>
                                    </Button>
                                    <TextBlock Text="{Binding PageDisplay}" VerticalAlignment="Center" Margin="16,0" FontWeight="SemiBold"/>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}" Padding="4" Height="32" Width="32" Command="{Binding NextPageCommand}">
                                        <materialDesign:PackIcon Kind="ChevronRight" Width="24" Height="24"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Border>

        <!-- 4. Drawer Overlay -->
        <Border x:Name="DrawerOverlay" 
                Visibility="Collapsed"
                Opacity="0"
                Background="#66000000"
                MouseDown="Overlay_MouseDown"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="-24">
            <Border.Effect>
                <BlurEffect Radius="2" RenderingBias="Quality"/>
            </Border.Effect>
        </Border>

        <!-- 5. Side Drawer (Add/Edit Form) -->
        <Border x:Name="SideDrawer"
                Width="500" 
                HorizontalAlignment="Right"
                Background="{DynamicResource MaterialDesignPaper}"
                Visibility="Collapsed"
                Margin="-24,-24,-24,-24">
            
            <!-- Elevation Effect -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="5" Opacity="0.4" Color="Black"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform x:Name="SideDrawerTransform" X="500"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Drawer Header -->
                <Border Background="#FF673AB7" Padding="25,12,20,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FolderPlus" Width="48" Height="48" Foreground="White"/>
                        <TextBlock Text="{Binding DrawerTitle}" FontSize="34" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Categories help you organize and filter your inventory." 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   Foreground="White" Opacity="0.9" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Drawer Content -->
                <ScrollViewer Grid.Row="1" Padding="40,32" VerticalScrollBarVisibility="Auto" materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="10,10,10,10">
                        <!-- Section Identification -->
                        <Border BorderBrush="#673AB7" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="10,0,0,28">
                            <TextBlock Text="CATEGORY DETAILS" FontWeight="Bold" Foreground="#673AB7" Padding="0,10,0,6"/>
                        </Border>

                        <TextBox Text="{Binding EditableCategory.CategoryName, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Category Name"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,24"
                                 FontSize="15"/>

                        <TextBox Text="{Binding EditableCategory.Description, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Description"
                                 materialDesign:HintAssist.IsFloating="True"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Top"
                                 Height="120"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,32"
                                 FontSize="15"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Drawer Footer -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="32,24" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="DISCARD" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#E0E0E0"
                                Foreground="#444444"
                                BorderBrush="#BDBDBD"
                                Command="{Binding CloseDrawerCommand}"
                                Margin="0,0,12,0"
                                Height="48"
                                materialDesign:ButtonAssist.CornerRadius="8"/>

                        <Button Grid.Column="1" 
                                Content="SAVE CATEGORY" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#673AB7"
                                Foreground="White"
                                Command="{Binding SaveCommand}"
                                Height="48"
                                materialDesign:ButtonAssist.CornerRadius="8"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <materialDesign:Snackbar MessageQueue="{Binding BoundMessageQueue}" 
                               Grid.RowSpan="2"
                               VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
