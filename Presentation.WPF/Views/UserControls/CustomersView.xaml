
<UserControl x:Class="Presentation.WPF.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1080"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Grid>
        <!-- Main Content Area -->
        <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="16" 
                materialDesign:ElevationAssist.Elevation="Dp1" BorderThickness="0">
            <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Stats -->
                    <RowDefinition Height="*"/>
                    <!-- Data -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer/Pagination -->
                </Grid.RowDefinitions>

                <!-- 1. Header Section -->
                <Grid Grid.Row="0" Margin="12,12,12,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Customer Management" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                               FontWeight="Light"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="Manage your customer database and contact details." 
                               Style="{StaticResource MaterialDesignBody2TextBlock}" 
                               Opacity="0.6"
                               Margin="0,4,0,0"/>

                        <Grid Width="450" HorizontalAlignment="Left" Margin="0,24,0,0">
                            <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search customers..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.PrefixText="ðŸ”  "
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Height="52"
                                 Padding="12,0"
                                 FontSize="15"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                    <Button Grid.Column="1" 
                        VerticalAlignment="Bottom"
                        Height="52"
                        Padding="32,0"
                        Command="{Binding OpenAddDrawerCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="26"
                        materialDesign:ElevationAssist.Elevation="Dp3">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="22" Height="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="ADD NEW CUSTOMER" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 2. Statistics Overview (Simplified for Customers) -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="4,0,4,32">
                    <!-- Total Customers -->
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Customers" FontSize="12" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding TotalCustomers}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="AccountGroup" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.15"/>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>

                <!-- 3. Customers DataGrid Area -->
                <materialDesign:Card Grid.Row="2" Margin="12,0,12,12" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="24,16">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.7"/>
                                    <TextBlock Text="Customer List" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Real-time data" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.5"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Customers}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              BorderThickness="0"
                              MinRowHeight="48"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource MaterialDesignDataGrid}"
                              materialDesign:DataGridAssist.CellPadding="24 4"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="24 16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="80"/>
                                <DataGridTextColumn Header="Code" Binding="{Binding CustomerCode}" Width="100"/>
                                
                                <DataGridTemplateColumn Header="Customer Name" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CustomerName}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Type" Binding="{Binding CustomerType}" Width="120"/>
                                
                                <DataGridTemplateColumn Header="Contact Info" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                    <materialDesign:PackIcon Kind="Phone" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,6,0" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding PhoneNumber}" FontSize="12"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Email" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,6,0" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Email}" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Edit Customer"
                                                    Command="{Binding DataContext.OpenEditDrawerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Delete Customer"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36" Margin="4,0,0,0">
                                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="#C62828" Opacity="0.8"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>

                <!-- 4. Footer / Pagination -->
                <Grid Grid.Row="3" Margin="12,0,12,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="2">
                        <TextBlock Text="Rows per page: 10" VerticalAlignment="Center" Margin="0,0,16,0" Opacity="0.6"/>
                        <TextBlock Text="{Binding PageDisplay}" VerticalAlignment="Center" Margin="0,0,16,0" FontWeight="SemiBold"/>
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                                Command="{Binding PrevPageCommand}"
                                ToolTip="Previous Page"
                                Width="32" Height="32">
                            <materialDesign:PackIcon Kind="ChevronLeft"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                                Command="{Binding NextPageCommand}"
                                ToolTip="Next Page"
                                Width="32" Height="32">
                            <materialDesign:PackIcon Kind="ChevronRight"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 5. Drawer Overlay -->
        <Border x:Name="DrawerOverlay" 
                Visibility="Collapsed"
                Opacity="0"
                Background="#66000000"
                MouseDown="Overlay_MouseDown"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="-24">
            <Border.Effect>
                <BlurEffect Radius="2" RenderingBias="Quality"/>
            </Border.Effect>
        </Border>

        <!-- 6. Side Drawer (Add/Edit Form) -->
        <Border x:Name="SideDrawer"
                Width="500" 
                HorizontalAlignment="Right"
                Background="{DynamicResource MaterialDesignPaper}"
                Visibility="Collapsed"
                Margin="-24,-24,-24,-24">
            
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="5" Opacity="0.4" Color="Black"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform x:Name="SideDrawerTransform" X="500"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Drawer Header -->
                <Border Background="#FF009688" Padding="25,12,20,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountPlus" Width="48" Height="48" Foreground="White"/>
                        <TextBlock Text="{Binding DrawerTitle}" FontSize="34" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Enter customer details below." 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   Foreground="White" Opacity="0.9" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Drawer Content -->
                <ScrollViewer Grid.Row="1" 
                              Padding="40,32"
                              materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="10,10,10,10">
                        <!-- General Info -->
                        <Border BorderBrush="#009688" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="0,0,0,28">
                            <TextBlock Text="GENERAL INFO" FontWeight="Bold" Foreground="#009688" Padding="0,0,0,6"/>
                        </Border>

                        <TextBox Text="{Binding EditableCustomer.CustomerName, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Customer Name (Required)"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding EditableCustomer.CustomerCode, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Customer Code"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="15"/>

                            <ComboBox Grid.Column="2"
                                      Text="{Binding EditableCustomer.CustomerType, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Type (e.g. Retail)"
                                      materialDesign:HintAssist.IsFloating="True"
                                      IsEditable="True"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="15">
                                <ComboBoxItem Content="Retail"/>
                                <ComboBoxItem Content="Wholesale"/>
                                <ComboBoxItem Content="Corporate"/>
                            </ComboBox>
                        </Grid>

                        <TextBox Text="{Binding EditableCustomer.PlaceOfSupplyState, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="State / Place of Supply"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,28"/>

                        <!-- Contact Info -->
                        <Border BorderBrush="#009688" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="0,0,0,28">
                            <TextBlock Text="CONTACT DETAILS" FontWeight="Bold" Foreground="#009688" Padding="0,0,0,6"/>
                        </Border>

                        <TextBox Text="{Binding EditableCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Phone Number"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,20"/>

                        <TextBox Text="{Binding EditableCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Email Address"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,28"/>

                        <!-- Tax Info -->
                        <Border BorderBrush="#009688" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="0,0,0,28">
                            <TextBlock Text="TAX INFORMATION" FontWeight="Bold" Foreground="#009688" Padding="0,0,0,6"/>
                        </Border>

                        <CheckBox IsChecked="{Binding EditableCustomer.IsGSTRegistered}" 
                                  Content="Is GST Registered?" Margin="0,0,0,16"/>

                        <TextBox Text="{Binding EditableCustomer.GSTIN, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="GSTIN"
                                 IsEnabled="{Binding EditableCustomer.IsGSTRegistered}"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,20"/>

                        <TextBox Text="{Binding EditableCustomer.PAN, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="PAN"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Drawer Footer -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="32,24" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="DISCARD" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#E0E0E0"
                                Foreground="#444444"
                                BorderBrush="#BDBDBD"
                                Command="{Binding CloseDrawerCommand}"
                                Margin="0,0,12,0"
                                Height="48"
                                materialDesign:ButtonAssist.CornerRadius="8"/>

                        <Button Grid.Column="1" 
                                Content="SAVE CUSTOMER" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#009688"
                                Foreground="White"
                                Command="{Binding SaveCommand}"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                Height="48"
                                materialDesign:ElevationAssist.Elevation="Dp2"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Snackbar -->
        <materialDesign:Snackbar MessageQueue="{Binding BoundMessageQueue}" />
    </Grid>
</UserControl>