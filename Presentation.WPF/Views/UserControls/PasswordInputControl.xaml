<UserControl x:Class="Presentation.WPF.Views.UserControls.PasswordInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Presentation.WPF.Helpers"
             x:Name="root">

    <Grid Height="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="36"/>
        </Grid.ColumnDefinitions>

        <!-- HIDDEN PASSWORD -->
        <PasswordBox Grid.Column="0"
                     Padding="30,0,0,0"
                     BorderThickness="0,0,0,1"
                     FontSize="14"
                     helpers:PasswordBoxHelper.BoundPassword="{Binding Password, ElementName=root}">
            <PasswordBox.Style>
                <Style TargetType="PasswordBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPasswordVisible, ElementName=root}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <!-- VISIBLE PASSWORD -->
        <TextBox Grid.Column="0"
                 Text="{Binding Password, ElementName=root, Mode=TwoWay}"
                 Padding="30,0,0,0"
                 BorderThickness="0,0,0,1"
                 FontSize="14"
                 Visibility="Collapsed"
                 Opacity="0">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPasswordVisible, ElementName=root}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!-- EYE BUTTON -->
        <Button Grid.Column="1"
                Command="{Binding ToggleCommand, ElementName=root}"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand">
            <Image Width="18" Height="18">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Source" Value="/Images/eye_closed.png"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPasswordVisible, ElementName=root}" Value="True">
                                <Setter Property="Source" Value="/Images/eye_open.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Button>
    </Grid>
</UserControl>