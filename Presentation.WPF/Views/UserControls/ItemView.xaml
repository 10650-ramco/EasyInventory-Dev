<UserControl x:Class="Presentation.WPF.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1080"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Grid>
        <!-- Main Content Area -->
        <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="16" 
                materialDesign:ElevationAssist.Elevation="Dp1" BorderThickness="0">
            <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Stats -->
                    <RowDefinition Height="*"/>
                    <!-- Data -->
                </Grid.RowDefinitions>

                <!-- 1. Header Section -->
                <Grid Grid.Row="0" Margin="12,12,12,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Inventory Management" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                               FontWeight="Light"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="Manage and track your products, stock levels, and categories." 
                               Style="{StaticResource MaterialDesignBody2TextBlock}" 
                               Opacity="0.6"
                               Margin="0,4,0,0"/>

                        <Grid Width="450" HorizontalAlignment="Left" Margin="0,24,0,0">
                            <TextBox x:Name="SearchBox"
                                 materialDesign:HintAssist.Hint="Search products..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.PrefixText="ðŸ”  "
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Height="52"
                                 Padding="12,0"
                                 FontSize="15"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                    <Button Grid.Column="1" 
                        VerticalAlignment="Bottom"
                        Height="52"
                        Padding="32,0"
                        Command="{Binding OpenAddDrawerCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="26"
                        materialDesign:ElevationAssist.Elevation="Dp3">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="22" Height="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="ADD NEW PRODUCT" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 2. Statistics Overview -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="4,0,4,32">
                    <!-- Total Items -->
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Products" FontSize="12" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding TotalItems}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="PackageVariant" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.15"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Low Stock -->
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Low Stock Items" FontSize="12" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding LowStockItems}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="AlertCircle" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.15"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Out of Stock -->
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Out of Stock" FontSize="12" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding OutOfStockItems}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="CloseCircle" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.2"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Total Inventory Value -->
                    <materialDesign:Card Margin="8" Padding="24" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Inventory Value" FontSize="12" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding TotalValue, StringFormat=C}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="CurrencyUsd" Width="40" Height="40" VerticalAlignment="Center" Opacity="0.2"/>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>

                <!-- 3. Items DataGrid Area -->
                <materialDesign:Card Grid.Row="2" Margin="12,0,12,12" UniformCornerRadius="16" materialDesign:ElevationAssist.Elevation="Dp16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="24,16">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.7"/>
                                    <TextBlock Text="Product Inventory" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Real-time stock tracking" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.5"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Products}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              BorderThickness="0"
                              MinRowHeight="48"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource MaterialDesignDataGrid}"
                              materialDesign:DataGridAssist.CellPadding="24 4"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="24 16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>

                                <DataGridTemplateColumn Header="Product Information" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,2">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource MaterialDesignBody}"/>
                                                <TextBlock Text="{Binding CategoryName}" FontSize="12" Opacity="0.6" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="120"/>

                                <DataGridTemplateColumn Header="Price" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Price, StringFormat=C}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Stock" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Stock}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Unit, StringFormat=' {0}'}" Opacity="0.5" FontSize="11" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Status" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:Chip Content="{Binding Status}" IsEnabled="False" Height="28">
                                                <materialDesign:Chip.Style>
                                                    <Style TargetType="materialDesign:Chip" BasedOn="{StaticResource MaterialDesignChip}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="In Stock">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                                <Setter Property="Foreground" Value="#EF6C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:Chip.Style>
                                            </materialDesign:Chip>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Edit Product"
                                                    Command="{Binding DataContext.OpenEditDrawerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Delete Product"
                                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="36" Height="36" Margin="4,0,0,0">
                                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="#C62828" Opacity="0.8"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Border>

        <!-- 4. Drawer Overlay (Shadows main content) -->
        <Border x:Name="DrawerOverlay" 
                Visibility="Collapsed"
                Opacity="0"
                Background="#66000000"
                MouseDown="Overlay_MouseDown"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="-24">
            <Border.Effect>
                <BlurEffect Radius="2" RenderingBias="Quality"/>
            </Border.Effect>
        </Border>

        <!-- 5. Side Drawer (Add/Edit Form) -->
        <Border x:Name="SideDrawer"
                Width="500" 
                HorizontalAlignment="Right"
                Background="{DynamicResource MaterialDesignPaper}"
                Visibility="Collapsed"
                Margin="-24,-24,-24,-24">
            
            <!-- Elevation Effect -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="5" Opacity="0.4" Color="Black"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform x:Name="SideDrawerTransform" X="500"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Drawer Header - SOLID COLOR FOR READABILITY -->
                <Border Background="#FF673AB7" Padding="25,12,20,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="PlaylistPlus" Width="48" Height="48" Foreground="White"/>
                        <TextBlock Text="{Binding DrawerTitle}" FontSize="34" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Ensure product details are accurate before saving." 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   Foreground="White" Opacity="0.9" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Drawer Content (Form) -->
                <ScrollViewer Grid.Row="1" 
                              Padding="40,32"
                              materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="10,10,10,10">
                        <!-- Section Identification -->
                        <Border BorderBrush="#673AB7" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="0,0,0,28">
                            <TextBlock Text="GENERAL DETAILS" FontWeight="Bold" Foreground="#673AB7" Padding="0,0,0,6"/>
                        </Border>

                        <TextBox Text="{Binding EditableProduct.Name, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Full Product Name"
                                 materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,28"/>

                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedValue="{Binding EditableProduct.CategoryId}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  materialDesign:HintAssist.Hint="Select Category"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  FontSize="15"
                                  Margin="0,0,0,28"/>

                        <TextBox Text="{Binding EditableProduct.Unit, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Unit (e.g., kg, unit, box)"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,40"/>

                        <!-- Section Identification -->
                        <Border BorderBrush="#673AB7" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Margin="0,0,0,28">
                            <TextBlock Text="INVENTORY &amp; PRICING" FontWeight="Bold" Foreground="#673AB7" Padding="0,0,0,6"/>
                        </Border>

                        <Grid Margin="0,0,0,28">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding EditableProduct.Price, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Unit Price"
                                     materialDesign:HintAssist.IsFloating="True"
                                     materialDesign:TextFieldAssist.PrefixText="$ "
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="15"/>

                            <TextBox Grid.Column="2"
                                     Text="{Binding EditableProduct.Stock, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Current Stock"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="15"/>
                        </Grid>

                        <TextBox Text="{Binding EditableProduct.LowStockThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Low Stock Alert Threshold"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="15"
                                 Margin="0,0,0,32"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Drawer Footer -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="32,24" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="DISCARD" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#E0E0E0"
                                Foreground="#444444"
                                BorderBrush="#BDBDBD"
                                Command="{Binding CloseDrawerCommand}"
                                Margin="0,0,12,0"
                                Height="48"
                                materialDesign:ButtonAssist.CornerRadius="8"/>

                        <Button Grid.Column="1" 
                                Content="SAVE CHANGES" 
                                FontSize="13"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#673AB7"
                                Foreground="White"
                                Command="{Binding SaveCommand}"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                Height="48"
                                materialDesign:ElevationAssist.Elevation="Dp2"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
