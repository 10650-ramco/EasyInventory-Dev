<Application x:Class="Presentation.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Presentation.WPF.Converters"
             xmlns:vm="clr-namespace:Presentation.WPF.ViewModels"
             xmlns:views="clr-namespace:Presentation.WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/FluentWPF;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Flat Design Overrides -->
            <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                <Setter Property="UniformCornerRadius" Value="8"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <!-- ===================== -->
            <!-- 🗺️ View Mappings -->
            <!-- ===================== -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
                <views:CustomersView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ItemViewModel}">
                <views:ItemView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ItemGroupViewModel}">
                <views:ItemGroupView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DeliveryChallanViewModel}">
                <views:DeliveryChallanView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SalesInvoiceViewModel}">
                <views:SalesInvoiceView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PurchaseOrderViewModel}">
                <views:PurchaseOrderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PurchaseInvoiceViewModel}">
                <views:PurchaseInvoiceView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:StockSummaryReportViewModel}">
                <views:StockSummaryReportView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CompanyDetailsViewModel}">
                <views:CompanyDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UserViewModel}">
                <views:UserView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SuppliersViewModel}">
                <views:SuppliersView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ProductViewModel}">
                <views:ProductView/>
            </DataTemplate>

        <!-- ===================== -->
        <!-- 🔁 Converters -->
        <!-- ===================== -->

        <!-- Bool → Visibility -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Stock → Brush (Low / Out / Normal) -->
        <converters:StockToBrushConverter x:Key="StockToBrush"/>

        <!-- ===================== -->
        <!-- 🎨 Global Brushes -->
        <!-- ===================== -->

        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E88E5"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E53935"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FB8C00"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#43A047"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>

        <!-- ===================== -->
        <!-- 🔘 Flat Icon Button -->
        <!-- ===================== -->

        <Style x:Key="FlatIconButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#37474F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#263238"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== -->
        <!-- 📁 Side Menu Button -->
        <!-- ===================== -->

        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <!-- Icon -->
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="{TemplateBinding Tag}"
                                           FontSize="20"
                                           Margin="0,0,10,0"/>

                                <!-- Text -->
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="14"
                                           Visibility="{Binding DataContext.IsMenuExpanded,
                                               RelativeSource={RelativeSource AncestorType=Window},
                                               Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#37474F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E88E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== -->
        <!-- 💡 Flat Buttons -->
        <!-- ===================== -->

        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ===================== -->
        <!-- 📝 TextBox / ComboBox -->
        <!-- ===================== -->

        <Style x:Key="FlatTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="FlatComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ===================== -->
        <!-- 📊 DataGrid -->
        <!-- ===================== -->

        <Style x:Key="FlatDataGridStyle" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
        
        <!-- ===================== -->
        <!-- 📄 Pagination Button -->
        <!-- ===================== -->

        <Style x:Key="PaginationButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CFD8DC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B0BEC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== -->
        <!-- 💧 Watermark TextBox -->
        <!-- ===================== -->

        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>

                            <TextBlock Text="{TemplateBinding Tag}"
                               Foreground="Gray"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"
                               x:Name="Watermark"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark"
                                Property="Visibility"
                                Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Watermark"
                                Property="Visibility"
                                Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== -->
        <!-- 🏗️ Drawer Easing -->
        <!-- ===================== -->

        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/>
        <CubicEase x:Key="CubicEaseIn" EasingMode="EaseIn"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>